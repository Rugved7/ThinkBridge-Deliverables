{
    // Theme and icons
    "workbench.colorTheme": "GitHub Dark High Contrast",
    "workbench.iconTheme": "material-icon-theme",

    // Editor and terminal font
    "editor.fontFamily": "'JetBrains Mono', Consolas, 'Courier New', monospace",
    "terminal.integrated.fontFamily": "'JetBrains Mono', Consolas, 'Courier New', monospace",

    // Git settings
    "git.enableSmartCommit": true, 
    "git.autofetch": true, 

    // Red Hat telemetry (for extensions like Java)
    "redhat.telemetry.enabled": true,

    // Default formatter for React files
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" 
    },

    // Disable welcome page on startup
    "workbench.startupEditor": "none",

    // Prettier as default formatter for JS files
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // Disable GitHub Copilot suggestions globally
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },

    // TypeScript formatter
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    // Auto-save files after short delay
    "files.autoSave": "afterDelay",

    // Auto-update imports when files move
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",

    // Live Server settings
    "liveServer.settings.donotShowInfoMsg": true, // hides startup message
    "liveServer.settings.donotVerifyTags": true, // ignores tag structure issues

    // Prettier for HTML files
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // Prettier + ESLint for CSS
    "[css]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    },

    // Hide secondary sidebar by default
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
    




